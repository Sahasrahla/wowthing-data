{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://wowthing.org/db.schema.json",
    "title": "DB entry",
    "description": "idk",
    "type": "object",
    "properties": {
        "requirements": {
            "description": "Requirements for every Thing in this file",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "tags": {
            "description": "Tags for every Thing in this file",
